@model Seguranca.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Criar uma nova conta</h4>
    <hr />
    @Html.ValidationSummary()
    
    <div class="form-group">
        @Html.LabelFor(m => m.login, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                @Html.TextBoxFor(m => m.login, new { @class = "form-control", @placeholder = "E-mail" })
            </div>
        </div>
    </div>
    
     <div class="form-group">
        @Html.LabelFor(m => m.nome, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(m => m.nome, new { @class = "form-control", @placeholder = "Nome do usuário" })
            </div>
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.senha, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-minus"></i></span>
                @Html.PasswordFor(m => m.senha, new { @class = "form-control", @placeholder = "Mínimo de 6 dígitos" })
            </div>
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.confirmacaoSenha, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-minus"></i></span>
                @Html.PasswordFor(m => m.confirmacaoSenha, new { @class = "form-control" })
            </div>
        </div>
    </div>
    
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrar" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
