@model System.Web.Mvc.IPagedList

@{
    Layout = null;
    string PageSize = Model.PageSize == 5000 ? "50" : "5000" ;
    string action = Model.action;
    string DivId = Model.DivId;
}

<div class="pagination pagination-small" style="text-align: center">
    <ul>
        <li><a href="#" onclick="javascript:foward('@(Model.PageIndex - 1)', '@Model.PageSize', '@Model.LastPage', '@action', '@DivId');"><i class="icon-backward"></i></a></li>
        @for (int i=0; i <= Model.LastPage; i++)
        {
            if (Model.PageIndex == i)
            {
                <li class="disabled"><a  style="background-color: #dbd8d8" href="#">@(i+1)</a></li>
            }
            else
            {
                <li><a href="#" style="background-color: #fff" onclick="javascript:Refresh('@i', '@Model.PageSize', '@action', '@DivId' )">@(i+1)</a></li>
            }
        }
        <li><a href="#" onclick="javascript:foward('@(Model.PageIndex + 1)', '@Model.PageSize', '@Model.LastPage', '@action', '@DivId');"><i class="icon-forward"></i></a></li>
        <li><a href="#" onclick="javascript:foward('0', '@PageSize', '@Model.LastPage', '@action', '@DivId');"><i class="icon-list-alt"></i></a></li>
    </ul>
</div>

