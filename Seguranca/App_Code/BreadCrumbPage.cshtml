@using Seguranca.Models.Control
@helper Trace(BreadCrumb breadCrumb)
{
    if (breadCrumb != null)
    {
        <div class="row">
            <div class="span12">
        <ul class="breadcrumb">
            <li><a href="/Home/Principal">Início</a> <span class="divider">/</span></li>
            @for (int i = 0; i <= breadCrumb.items.Count - 2; i++)
            {
                <li><a href="../@breadCrumb.items[i].controllerName/@breadCrumb.items[i].link">@breadCrumb.items[i].text</a> <span class="divider">/</span></li>
            }
            <li class="active">@breadCrumb.items[breadCrumb.items.Count - 1].text</li>
        </ul>    
            </div>
        </div>
    }
}
